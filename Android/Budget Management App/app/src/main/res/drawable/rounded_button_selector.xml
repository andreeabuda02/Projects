<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Starea apăsată (când butonul este apăsat) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/orange" />
            <stroke android:width="2dp" android:color="@color/darker_orange" />
        </shape>
    </item>

    <!-- Starea selectată (când butonul este selectat) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/light_orange" />
            <stroke android:width="2dp" android:color="@color/orange" />
        </shape>
    </item>

    <!-- Starea implicită (când nu e selectat sau apăsat) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/white" />
            <stroke android:width="2dp" android:color="@color/gray_light" />
        </shape>
    </item>

</selector>
